

<div class="container">
  <h2 style="color:white">Reset your password</h2>

   <%= form_with url:"/password/reset_password", local: true,method: :post do |form| %>
  
  <div class="form-group">
      <%= form.label "New Password" %><br>
      <%= form.text_field :password, :class => "form-control form-control-lg", placeholder: "Enter Password..."%>
  </div>
  <div class="form-group">
      <%= form.label "Confirm Password" %><br>
      <%= form.text_field :confirm_password, :class => "form-control form-control-lg", placeholder: "Confirm Password..." %>
  </div>
  <div class="actions">
    <%= form.submit "Submit", class: 'btn btn-primary' %>
    <%= form.button :'Cancel', type: :reset, class: 'btn btn-danger' %> 
  </div>
  <br>
  <br>
  <% end %>
</div> 


