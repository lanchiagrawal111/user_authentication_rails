
<div class="container">
<h2 style="color:white">Reset your password</h2>

<%= form_with(model: @user,url:"/password/reset_password",local:true,method: :post ) do |form| %>
  <div class="form-group">  
    <%= form.label :New_password %><br>
    <%= form.password_field :password, class: "form-control form-control-lg", placeholder: "Enter Password..." %>
  </div>

   <div class="form-group">  
    <%= form.label :Confirm_New_password %><br>
    <%= form.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: "Confirm Password..." %>
  </div>

  <div class=actions>
    <%= form.submit "Reset", class: 'btn btn-primary' %>
  </div>

  <hr/>
  
<% end %>
</div>


