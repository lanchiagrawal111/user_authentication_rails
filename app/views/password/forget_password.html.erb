
<div class="container">
<h2 style="color:white">Forgot your Password</h2>
<%= form_with(model: @user,local:true) do |form| %>

   <div class="form-group">  
    <%= form.label :email %><br>
    <%= form.email_field  :email, class: "form-control form-control-lg", placeholder: "Enter Email..." %>
  </div>

  

  <div class=actions>
    <%= form.submit "Submit", class: 'btn btn-primary' %>
    <%= form.button :'Cancel', type: :reset, class: 'btn btn-danger' %> 
  </div>
  
  <hr/>
<% end %>
</div>


