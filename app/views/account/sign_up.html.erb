
<div class="container">
<h2 style="color:white">Create New Account</h2>
<%= form_with(model:@user ,url: account_sign_up_path, local: true) do |form| %>
 <% if @new_user && @new_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@new_user.errors.count, "error") %> prohibited this employee from being saved:</h2>
      <ul>
        <% @new_user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
  <div class="col-md-6">
  <div class="form-group">
    <%= form.label :first_name ,class:"text-secondary"%><br>
    <%= form.text_field :first_name, class: "form-control form-control-lg" ,placeholder: "Enter First name" %>
  </div>
  </div>
  
 <div class="col-md-6">
  <div class="form-group">
    <%= form.label :last_name, class:"text-secondary" %><br>
    <%= form.text_field :last_name, class: "form-control form-control-lg" ,placeholder: "Enter Last name" %>
  </div>
  </div>
  </div> 

  <div class="form-group">  
    <%= form.label :date_of_birth, class:"text-secondary" %><br>
    <%= form.date_field :date_of_birth, class: "form-control form-control-lg", placeholder: "Enter Date Of Birth..." %>
  </div>

 <div class="row">
 <div class="col-md-6">
  <div class="form-group">
    <%= form.label :mobile_number , class:"text-secondary"%><br>
    <%= form.number_field :mobile, class: "form-control form-control-lg" ,placeholder: "Enter Mobile Number" %>
  </div>
  </div>
   
   <div class="col-md-6">
   <div class="form-group">  
    <%= form.label :email, class:"text-secondary" %><br>
    <%= form.email_field  :email, class: "form-control form-control-lg", placeholder: "Enter Email..." %>
  </div>
  </div>
  </div>
  
  <div class="row">
  <div class="col-md-6">
  <div class="form-group">  
    <%= form.label :password , class:"text-secondary"%><br>
    <%= form.password_field :password, class: "form-control form-control-lg", placeholder: "Enter Password..." %>
  </div>
  </div>

   <div class="col-md-6">
   <div class="form-group">  
    <%= form.label :password_confirmation, class:"text-secondary" %><br>
    <%= form.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: "Confirm Password..." %>
  </div>
  </div>
  </div>


  <div class=actions>
    <%= form.submit "Sign Up", class: 'btn btn-primary' %>
    <%= form.button :cancel, class: 'btn btn-danger' %>
  </div>

  <hr/>
  <p style="color:white">Already have an account?</p>
  <%= link_to('Sign In', { action: 'login', controller: 'account'}) %>

  
<% end %>

</div>


