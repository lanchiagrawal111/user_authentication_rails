
<div class="container">
<h2 style="color:white">Login into your account</h2>
<%= form_with(model: @user, local: true) do |form| %>

   <div class="form-group">  
    <%= form.label :email %><br>
    <%= form.email_field  :email, class: "form-control form-control-lg", placeholder: "Enter Email..." %>
  </div>

  <div class="form-group">  
    <%= form.label :password %><br>
    <%= form.password_field :password, class: "form-control form-control-lg", placeholder: "Enter Password..." %>
  </div>

  <div class=actions>
    <%= form.submit "Sign In", class: 'btn btn-primary' %>
    <%= form.button :'Cancel', type: :reset, class: 'btn btn-danger' %> 
  </div>

  <hr/>

  <p style="color:white">New User?</p>
  <%= link_to('Sign Up Now!', { action: 'sign_up', controller: 'account'}) %> <br/>
  <%= link_to('Forgot Your Password?', { action: 'forget_password', controller: 'password'}) %>
       
<% end %>
</div>


