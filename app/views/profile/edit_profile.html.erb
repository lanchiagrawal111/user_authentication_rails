
<div class="container">
<h2 style="color:white">Edit Profile</h2>

<%= form_with( model:@user,url:"/profile/edit_profile",   local: true , method: :post )do |form| %>
  <div class="form-group">
    <%= form.label :first_name, class:"text-secondary" %><br>
    <%= form.text_field :first_name,class: "form-control form-control-lg"%>
  </div>

   <div class="form-group">
    <%= form.label :last_name,class:"text-secondary" %><br>
    <%= form.text_field :last_name, class: "form-control form-control-lg"%>
   </div>

   <div class="form-group">
      <%= form.label :date_of_birth,class: "text-secondary" %>
      <%= form.date_field  :date_of_birth,class: "form-control form-control-lg"%>
   </div>

   <div class="form-group">  
    <%= form.label :mobile_number,class:"text-secondary" %><br>
    <%= form.telephone_field :mobile, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">  
    <%= form.label :profile_image,class:"text-secondary" %><br>
    <%= form.file_field :profile_image, class: "form-control form-control-lg" %>
  </div>

  

  <div class="actions">
    <%= form.submit "Update", class: 'btn btn-primary' %>
    <%= form.button :'Cancel', type: :reset, class: 'btn btn-danger' %> 
  </div>

  <hr/>
  
<% end %>
</div>


